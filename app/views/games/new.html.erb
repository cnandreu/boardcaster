<h1>Create a new Game</h1>  
  
<%= form_for(@game, :html => { :class => "form-stacked"} ) do |f| %>  

<%= render 'shared/error_messages', :target =>  @game %>

<fieldset>	
<div class="clearfix">
    <%= f.label :title %> 
 	<div class="input">
    	<%= f.text_field :title, :autofocus => true %>  
	</div>
</div>

<div class="clearfix">
    <%= f.label :white_player %> 
	<div class="input"> 
	<%=	collection_select(:game, :user_id_white, User.all, :id, :username, :prompt => true) %>		
  </div>
</div>

<div class="clearfix">
    <%= f.label :black_player %> 
	<div class="input"> 
	<%=	collection_select(:game, :user_id_black, User.all, :id, :username, :prompt => true) %>		
  </div>
</div>


</fieldset>

<div class="actions">
	<%= f.submit 'Submit', :class => 'btn primary' %>
</div>
  
<% end %>