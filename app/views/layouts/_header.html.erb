<div class="topbar" >
  <div class="topbar-inner">
    <div class="container">
      <%= link_to 'Boardcaster', root_path, :class=>'brand' %>
      <ul class="nav">
        <%= navigation "Home", root_path %>	
        <%= navigation "Create a Game", create_path %>
        <%= navigation "View Games", games_path %>
        <% if current_user %>
          <%= navigation "Profile", current_user %>
          <%= navigation "Logout", logout_path %>
        <% else %>
          <%= navigation "Sign up", signup_path %>
          <%= navigation "Login", login_path %> 
        <% end %> 
      </ul>

      <%= form_tag search_path, :class => "pull-right", :method => 'get' do %>    
        <%= text_field_tag :search, params[:search], :placeholder => "Search Here" %>  
      <% end %>  

    </div>
  </div>
</div>


