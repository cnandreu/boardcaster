<h1>Sign Up</h1>  
  
<%= form_for(@user, :html => { :class => "form-stacked"} ) do |f| %>  
  <% if @user.errors.any? %>  
    <div class="alert-message block-message error">  
      <strong>Form is invalid</strong>  
      <ul>  
        <% for message in @user.errors.full_messages %>  
          <li><%= message %></li>  
        <% end %>  
      </ul>  
    </div>  
  <% end %>  

<fieldset>	
<div class="clearfix">
    <%= f.label :username %> 
 	<div class="input">
    	<%= f.text_field :username %>  
	</div>
</div>

<div class="clearfix">
    <%= f.label :email %> 
	<div class="input"> 
    	<%= f.text_field :email %>  
  </div>
</div>

<div class="clearfix">  
    <%= f.label :password %>  
	<div class="input">
    	<%= f.password_field :password %>  
    </div>
</div>

<div class="clearfix">  
    <%= f.label :password_confirmation %>  
	<div class="input">
    	<%= f.password_field :password_confirmation %>  
    </div> 
</div>
</fieldset>

<div class="actions">
	<%= f.submit 'Submit', :class => 'btn primary' %>
</div>
  
<% end %>