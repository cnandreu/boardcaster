<div class="page-header">
  <h1><%= "#{@user.username}'s Profile" %></h1>
</div>

<p class="pull-right"><%= gravatar_for @user %></p>

<strong>Email: </strong>
<ul>
  <li><%= @user.email%></li>
</ul>

<strong>Games Played:</strong>
<ul>
  <% if @games.blank? %>
    <li> No games played! </li>
  <% else %>
    <%@games.each do |game| %>
      <li><%= link_to game.title, game %></li>
    <%end%>
  <%end%>
</ul>
