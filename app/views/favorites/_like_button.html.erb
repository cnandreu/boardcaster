<div class="fav">
<%= form_for(@favorite, :remote => true, :html => { :class => "like"} ) do |frm| %>
    <%= frm.hidden_field :game_id, :value => @game.id %>

    <% if current_user.favorites.where(:game_id => @game.id).count == 0 %> 
      <%= frm.submit 'Like Game', :class => 'btn primary pull-right', :id => "FavButton" %>
    <% else %>
      <%= frm.submit 'Unlike Game', :class => 'btn success pull-right', :id => "FavButton" %>
    <% end %>
  <% end %>
</div>
