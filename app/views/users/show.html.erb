<div class="page-header">
  <h1><%= "#{@user.username}'s Profile" %> </h1>


  <p>
  <%if current_user.id == @user.id %>
    <%= link_to "Click to Edit Profile", edit_user_path %>
  <%end%>
  </p>

  </div>

<p class="pull-right"><%= gravatar_for @user %></p>

<strong>Details: </strong>
<%= render 'users/list_details', :user => @user %>

<strong>Games Played:</strong>
<%= render 'users/list_played', :games => @games %>

<strong>Games Liked:</strong>
<%= render 'users/list_liked', :fav => @fav, :games => @games %>

