<h1>Log in</h1>  
  
<%= form_tag sessions_path, :class => "form-stacked" do %>  
<fieldset>	
	
<div class="clearfix">  
    <%= label_tag :username %>  
	<div class="input"> 
    <%= text_field_tag :username, params[:username] %>
  	</div>
</div>  
  
<div class="clearfix">  
    <%= label_tag :password %>  
	<div class="input">
    	<%= password_field_tag :password %>  
  	</div>
</div>
  
<div class="clearfix"> 
	<%= check_box_tag :remember_me, 1, params[:remember_me] %>  
    <%= content_tag :span, "Remember Me"  %>   
<fieldset>	

  <div class="actions"><%= submit_tag "Log in", :class => 'btn primary' %></div>  
<% end %>